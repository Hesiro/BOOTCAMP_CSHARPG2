<Window x:Class="ModeloDesconectadoWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModeloDesconectadoWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Users">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="70*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="25,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="100" Grid.Column="1" Text="Users"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8,25,20,20" Grid.Column="1" Grid.ColumnSpan="3">
                        <StackPanel Margin="25,25,0,0">
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Width="206" x:Name="comboBoxUsers"/>
                                <Button x:Name="btnAddUser" Content="Add User"/>
                                <Button x:Name="btnUpdateUser" Content="Update User"/>
                                <Button x:Name="btnDeleteUser" Content="Delete User"/>
                            </StackPanel>
                            <TextBlock Text="Name"/>
                            <TextBox x:Name="txtName" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Email"/>
                            <TextBox x:Name="txtEmail" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Address"/>
                            <TextBox x:Name="txtAddress" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Age"/>
                            <TextBox x:Name="txtAge" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Next Flight"/>
                            <ComboBox x:Name="comboBoxNextFlight" HorizontalAlignment="Center" Width="200"/>
                            <DataGrid x:Name="dataGridUsers" Height="150">
                                
                            </DataGrid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Flights">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="70*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="25,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="100" Grid.Column="1" Text="Flights"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8,25,20,20" Grid.Column="1" Grid.ColumnSpan="3">
                        <StackPanel Margin="25,25,0,0">
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Width="206" x:Name="comboBoxFlights" SelectionChanged="comboBoxFlights_SelectionChanged"/>
                                <Button x:Name="btnAddFlight" Content="Add Flight"/>
                                <Button x:Name="btnUpdateFlight" Content="Update Flight"/>
                                <Button x:Name="btnDeleteFlight" Content="Delete Flight"/>
                            </StackPanel>
                            <TextBlock Text="Airline"/>
                            <TextBox x:Name="txtAirline" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Flight Number"/>
                            <TextBox x:Name="txtFlightNumber" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Destination"/>
                            <TextBox x:Name="txtDestination" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Aircraft"/>                            
                            <ComboBox x:Name="comboBoxAircraft" HorizontalAlignment="Center" Width="200"/>
                            <DataGrid x:Name="dataGridFlights" Height="150">

                            </DataGrid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
